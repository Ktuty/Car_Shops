@model Car

<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        <small>@Model.Name</small>
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row" style="font-size: 20px;">

        <div class="col-md-8">
            <img class="img-fluid" src="@Model.Image" alt="" />
        </div>

        <div class="col-md-4">
            <p><strong>@Model.ShortDesc</strong></p>
            <h8 class="my-3">@Model.LongDesc</h8>
            <ul>
                <li>Категория: @Model.categoryID</li>
                <li>Цена: @Model.Price рублей</li>
            </ul>

            @if (User.Identity.IsAuthenticated && User.IsInRole("user"))
            {
                <button onclick="kupit()">Купить</button>

                <script>
                    function kupit() {
                        alert("Ваша заявка принята! Мы с вами свяжемся!");
                    }
                </script>
            }



        </div>
